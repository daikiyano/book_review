<div style="height:760px; width:400px; margin-left:auto; margin-right:auto; ">
<h2>Sign up</h2>
<%= simple_form_for(resource,multipart: true, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <label>First Name</label>
  	<%= f.text_field :first_name, required: true, autofocus: true, class:"form-control" %><br>
    <label>Last Name</label><br>
  	<%= f.text_field :last_name, required: true, autofocus: true, class:"form-control" %><br>
    <label>User name</label><br>
  	<%= f.text_field :username, required: true, autofocus: true, class:"form-control" %><br>

  	<%= f.input :birthday, required: true, autofocus: true %><br>
    <label>Email</label><br>
    <%= f.email_field :email, required: true, autofocus: true, class:"form-control" %><br>
    <label>image picture</label><br>
    <%= f.file_field :user_image, required: true, autofocus: true, class:"form-control-file" %><br>
    <label>Password</label><br>
    <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),class:"form-control" %><br>
    <label>Password confirmation</label><br>
    <%= f.password_field :password_confirmation,class:"form-control", required: true %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up",class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
