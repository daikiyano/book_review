 <div style="height:760px; width:400px; margin-left:auto; margin-right:auto; ">
<h2>Edit <%= resource_name.to_s.humanize %></h2><%= image_tag(current_user.user_image, style:'height:100px; width:100px; border-radius:30px; margin-left:140px; ') %>

<%= simple_form_for(resource, multipart: true, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
 
  <div class="form-inputs">
    <label>First Name</label>
    <%= f.text_field :first_name, required: true, autofocus: true, class:"form-control" %><br>
    <label>Last Name</label><br>
    <%= f.text_field :last_name, required: true, autofocus: true, class:"form-control" %><br>
    <label>User name</label><br>
    <%= f.text_field :username, required: true, autofocus: true, class:"form-control" %><br>

    <%= f.input :birthday, required: true, autofocus: true %><br>
    <%= f.text_field :email, required: true, autofocus: true, class:"form-control" %><br>
    <label>image picture</label><br>
    <%= f.file_field :user_image, required: true, autofocus: true, class:"form-control-file" %><br>
   

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <label>password</label><br>
    <%= f.password_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false,class:"form-control" %>
    <label>password confirmation</label><br>
    <%= f.password_field :password_confirmation, required: false,class:"form-control" %>
    <label>current password</label><br>
    <%= f.password_field :current_password, hint: "we need your current password to confirm your changes", required: true,class:"form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update",class:"btn btn-success" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
