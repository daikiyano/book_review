<div style="height:760px; width:400px; margin-left:auto; margin-right:auto; ">
<h2>Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <label>Email</label><br>
    <%= f.email_field :email, required: true, autofocus: true, class:"form-control" %><br>
    <label>password</label><br>
    <%= f.password_field :password, required: false, class:"form-control" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in",class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
