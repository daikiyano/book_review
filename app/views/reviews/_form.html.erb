<div style="height:760px; width:400px; margin-left:auto; margin-right:auto; ">
	<h1>New review</h1>
<%= form_for([@book,@book.reviews.build]) do |f| %>
<h4>please write your review about <%= @book.title %></h4>
<label>rating</label>
<div id="rating-form">

</div>
<label>comment</label>
<%= f.text_field :comment, class:"form-control" %><br>
<%= f.button :submit, class:"btn btn-success" %><br>
<% end %>

</div>

<script>
	 $("#rating-form").raty({
	 	path:'/assets/',
	 	scoreName: 'review[rating]'
	 });
  
</script>